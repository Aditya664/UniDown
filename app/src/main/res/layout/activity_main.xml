<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f7fc"
    tools:context=".MainActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
          <RelativeLayout
              android:layout_width="match_parent"
              android:id="@+id/rellayout"
              android:background="@color/colorPrimery"
              android:layout_height="250dp">
          <ImageView
              android:layout_width="100dp"
              android:outlineAmbientShadowColor="@color/black"
              android:layout_height="100dp"
              android:src="@drawable/logo"
              android:layout_centerInParent="true"
              android:id="@+id/logo"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/app_name"
              android:layout_below="@+id/logo"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/f1"
              android:textSize="25dp"
              android:textColor="@color/black"
              android:layout_marginTop="5dp"/>

      </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_below="@+id/rellayout"
              android:orientation="vertical"
              android:padding="12dp"
              android:id="@+id/fb"
              android:layout_height="match_parent">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:id="@+id/facebook"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/rectangle"
                  android:elevation="8dp">

                  <ImageView
                      android:id="@+id/flogo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"
                      android:layout_marginLeft="12dp"
                      android:src="@drawable/ic_facebook" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@+id/flogo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Facebook"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="23dp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Download Facebook video"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="15dp" />

                  </LinearLayout>
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_centerVertical="true"
                      android:id="@+id/farr"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/whatsapp"
                  android:background="@drawable/rectangle"
                  android:elevation="8dp">

                  <ImageView
                      android:id="@+id/wlogo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"
                      android:layout_marginLeft="12dp"
                      android:src="@drawable/whatsapp_logo" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@+id/wlogo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="WhatsApp"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="23dp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Download WhatsApp video"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="15dp" />

                  </LinearLayout>
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_centerVertical="true"
                      android:id="@+id/warr"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:id="@+id/insta"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/rectangle"
                  android:elevation="8dp">

                  <ImageView
                      android:id="@+id/ilogo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"
                      android:layout_marginLeft="12dp"
                      android:src="@drawable/insta_logo" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@+id/ilogo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Instagram"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="23dp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Download Instagram video"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="15dp" />

                  </LinearLayout>
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_centerVertical="true"
                      android:id="@+id/iarr"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/youtube"
                  android:background="@drawable/rectangle"
                  android:elevation="8dp">

                  <ImageView
                      android:id="@+id/ylogo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"
                      android:layout_marginLeft="12dp"
                      android:src="@drawable/youtube" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@+id/ylogo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="youtube"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="23dp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Download Youtube video"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="15dp" />

                  </LinearLayout>
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_centerVertical="true"
                      android:id="@+id/yarr"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:id="@+id/shareapp"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/rectangle"
                  android:elevation="8dp">

                  <ImageView
                      android:id="@+id/share"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"
                      android:layout_marginLeft="12dp"
                      android:src="@drawable/ic_share_2" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@+id/share"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Share App"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="23dp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:fontFamily="@font/f2"
                          android:text="Share this app"
                          android:textColor="@color/colorPrimeryDark"
                          android:textSize="15dp" />

                  </LinearLayout>
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_centerVertical="true"
                      android:id="@+id/sharrearr"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp" />
              </RelativeLayout>


          </LinearLayout>
      </RelativeLayout>

  </ScrollView>

</RelativeLayout>
</layout>